<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGTools.View.SpellDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Nom, StringFormat='    Nom : {0:F0}'}}" FontSize="20" VerticalOptions="Start" HorizontalOptions="StartAndExpand" />
            <Label Text="{Binding Effet, StringFormat='    Effet : {0:F0}'}}" FontSize="20" VerticalOptions="Start" HorizontalOptions="StartAndExpand"/>
            <Label Text="{Binding MontantDommage, StringFormat='    MontantDommage : {0:F0}'}}" FontSize="20" VerticalOptions="Start" HorizontalOptions="StartAndExpand"/>
            <Label Text="{Binding CoutMana, StringFormat='    CoutMana : {0:F0}'}}" FontSize="20" VerticalOptions="Start" HorizontalOptions="StartAndExpand"/>
            <Label Text="{Binding Cooldown, StringFormat='    Cooldown : {0:F0}'}}" FontSize="20" VerticalOptions="Start" HorizontalOptions="StartAndExpand"/>
            <Button Text="Utiliser le sort" Command="{Binding UseSpellCmd}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>