<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGTools.View.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblOption" Text="Options" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0, 0, 0, 50"/>
            <Button x:Name="bttHome" Text="Home" Clicked="Home_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button x:Name="bttAbout" Text="About" Clicked="About_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button x:Name="bttReset" Text="Réinitialiser les données" Clicked="Reset_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>