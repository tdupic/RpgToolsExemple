<Page
    x:Class="AppAdmin.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppAdmin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <StackPanel>
        <TextBlock Text="RPG TOOLS" HorizontalAlignment="Center" FontSize="50" Margin="40"/>
        <TextBox x:Name="idBox" HorizontalAlignment="Center" Margin="10" PlaceholderText="Identifiant" KeyDown="EnterPress"/>
        <PasswordBox x:Name="passBox" HorizontalAlignment="Center" Margin="10" PlaceholderText="Password" KeyDown="EnterPress"/>
        <Button Content="Connexion" HorizontalAlignment="Center" Margin="10" Click="Connexion_Click"/>
    </StackPanel>
</Page>
